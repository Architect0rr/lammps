{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "minimal",
      "hidden": false,
      "description": "local kein's configuration preset",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_FLAGS": "-Ofast -std=c++17",
        "CMAKE_C_FLAGS": "-Ofast",
        "LAMMPS_SIZES": "bigbig",
        "LAMMPS_MACHINE": "mpi",
        "BUILD_SHARED_LIBS": "yes",
        "BUILD_LIB": "yes",
        "BUILD_MPI": "yes",
        "BUILD_TOOLS": "yes",
        "BUILD_LAMMPS_SHELL": "no",
        "BUILD_LAMMPS_GUI": "no",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "environment": {},
      "generator": "Unix Makefiles",
      "binaryDir": "../build"
    },
    {
      "name": "full",
      "hidden": false,
      "description": "local kein's configuration preset",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_FLAGS": "-Ofast -std=c++17",
        "CMAKE_C_FLAGS": "-Ofast",
        "CMAKE_INSTALL_PREFIX": "$env{VIRTUAL_ENV}",
        "LAMMPS_SIZES": "bigbig",
        "LAMMPS_MACHINE": "mpi",
        "BUILD_SHARED_LIBS": "yes",
        "BUILD_LIB": "yes",
        "BUILD_MPI": "yes",
        "BUILD_TOOLS": "yes",
        "BUILD_LAMMPS_SHELL": "no",
        "BUILD_LAMMPS_GUI": "no",
        "PKG_ADIOS": "yes",
        "ADIOS2_DIR": "$env{REPOS}/ADIOS2/build",
        "PKG_PYTHON": "yes",
        "Python_EXECUTABLE": "$env{VIRTUAL_ENV}/bin/python3",
        "PKG_COMPRESS": "yes",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "environment": {},
      "generator": "Unix Makefiles",
      "binaryDir": "../build"
    },
    {
      "name": "cluster",
      "hidden": false,
      "description": "local kein's configuration preset",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_FLAGS": "-Ofast -std=c++17",
        "CMAKE_C_FLAGS": "-Ofast",
        "CMAKE_INSTALL_PREFIX": "$env{VIRTUAL_ENV}",
        "LAMMPS_SIZES": "bigbig",
        "LAMMPS_MACHINE": "mpi",
        "BUILD_SHARED_LIBS": "yes",
        "BUILD_LIB": "yes",
        "BUILD_MPI": "yes",
        "BUILD_TOOLS": "yes",
        "BUILD_LAMMPS_SHELL": "no",
        "BUILD_LAMMPS_GUI": "no",
        "PKG_ADIOS": "yes",
        "ADIOS2_DIR": "$env{REPOS}/ADIOS2/build",
        "PKG_PYTHON": "yes",
        "Python_EXECUTABLE": "$env{VIRTUAL_ENV}/bin/python3",
        "PKG_COMPRESS": "yes"
      },
      "environment": {},
      "generator": "Unix Makefiles",
      "binaryDir": "../build"
    }
  ],
  "buildPresets": [
    {
      "name": "minimal",
      "description": "local kein's build preset",
      "configurePreset": "minimal",
      "cleanFirst": true,
      "targets": ["all"],
      "inheritConfigureEnvironment": true,
      "jobs": 8
    },
    {
      "name": "full",
      "description": "local kein's build preset",
      "configurePreset": "full",
      "cleanFirst": true,
      "targets": ["all"],
      "inheritConfigureEnvironment": true,
      "jobs": 8
    },
    {
      "name": "cluster",
      "description": "local kein's build preset",
      "configurePreset": "cluster",
      "cleanFirst": true,
      "targets": ["all"],
      "inheritConfigureEnvironment": true,
      "jobs": 16
    }
  ],
  "workflowPresets": [
    {
      "name": "minimal",
      "steps": [
        {
          "type": "configure",
          "name": "minimal"
        },
        {
          "type": "build",
          "name": "minimal"
        }
      ]
    },
    {
      "name": "full",
      "steps": [
        {
          "type": "configure",
          "name": "full"
        },
        {
          "type": "build",
          "name": "full"
        }
      ]
    },
    {
      "name": "cluster",
      "steps": [
        {
          "type": "configure",
          "name": "cluster"
        },
        {
          "type": "build",
          "name": "cluster"
        }
      ]
    }
  ]
}
